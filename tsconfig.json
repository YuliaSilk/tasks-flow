{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./build",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "ES2021"], 
    "module": "ESNext",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "**/*.test.*",
    "**/*.spec.*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
